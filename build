#!/usr/bin/env python
from build_utils import *

def build():
    mkdir('swfs')
    experiments()

def clean():
    rmdir('swfs')

def experiments():
    haxe('experiments.TestShader',        libs=['format'])
    haxe('experiments.TestSimplex')
    haxe('experiments.Zoomer',            libs=['polygonal'])
    haxe('experiments.explorer.Explorer', libs=['polygonal'])
    #haxe('STest')

main()
